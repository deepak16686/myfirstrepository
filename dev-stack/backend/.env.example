# ============================================================
# AI DevOps Platform - Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ============================================================

# ----------------------------------------------------------
# GitLab (Source Code & CI/CD Pipeline Execution)
# ----------------------------------------------------------
GITLAB_URL=http://gitlab-server
GITLAB_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx

# ----------------------------------------------------------
# GitHub / Gitea (GitHub Actions Workflow Support)
# ----------------------------------------------------------
GITHUB_URL=http://gitea-server:3000
GITHUB_TOKEN=your-github-or-gitea-token

# ----------------------------------------------------------
# SonarQube (Code Quality & Security Analysis)
# ----------------------------------------------------------
SONARQUBE_URL=http://ai-sonarqube:9000
SONARQUBE_USERNAME=admin
SONARQUBE_PASSWORD=your-sonarqube-password
SONARQUBE_TOKEN=squ_xxxxxxxxxxxxxxxxxxxx

# ----------------------------------------------------------
# Trivy (Container Vulnerability Scanning)
# ----------------------------------------------------------
TRIVY_URL=http://trivy-server:8080

# ----------------------------------------------------------
# Nexus (Docker Image Registry & Artifact Storage)
# ----------------------------------------------------------
NEXUS_URL=http://ai-nexus:8081
NEXUS_USERNAME=admin
NEXUS_PASSWORD=your-nexus-password

# ----------------------------------------------------------
# ChromaDB (Vector Database for RAG & Template Storage)
# ----------------------------------------------------------
CHROMADB_URL=http://chromadb:8000

# ----------------------------------------------------------
# Ollama (LLM Inference Server)
# ----------------------------------------------------------
OLLAMA_URL=http://ollama:11434

# ----------------------------------------------------------
# Redis (Caching)
# ----------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# ----------------------------------------------------------
# PostgreSQL (Database Persistence)
# ----------------------------------------------------------
POSTGRES_URL=postgresql://user:password@ai-postgres:5432/database_name

# ----------------------------------------------------------
# Jira (Issue Tracking & Access Requests) - Optional
# ----------------------------------------------------------
JIRA_URL=http://jira:8080
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=DEVOPS

# ----------------------------------------------------------
# Splunk (Event Logging via HEC) - Optional
# ----------------------------------------------------------
SPLUNK_URL=https://ai-splunk:8088
SPLUNK_TOKEN=your-splunk-hec-token

# ----------------------------------------------------------
# Jenkins (CI/CD Orchestration) - Optional
# ----------------------------------------------------------
JENKINS_URL=http://jenkins-master:8080
JENKINS_USERNAME=your-jenkins-username
JENKINS_PASSWORD=your-jenkins-password

# ----------------------------------------------------------
# LLM Provider Selection
# Options: "ollama" (default) or "claude-code"
# ----------------------------------------------------------
LLM_PROVIDER=ollama

# Claude Code CLI settings (only used when LLM_PROVIDER=claude-code)
# Model options: sonnet, opus, haiku
CLAUDE_MODEL=sonnet
CLAUDE_TIMEOUT=300

# ----------------------------------------------------------
# Debug Mode
# ----------------------------------------------------------
DEBUG=false
